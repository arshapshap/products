<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:backgroundTint="@color/white"
    android:paddingVertical="@dimen/small_margin"
    android:paddingHorizontal="@dimen/default_margin"
    android:theme="@style/Theme.Products">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/check_box_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tag_view_margin_between"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_radio_button_unchecked" />

    <TextView
        android:id="@+id/category_name_text_view"
        style="@style/Products.TextAppearance.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Smartphones" />
</LinearLayout>